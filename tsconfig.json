// https://www.typescriptlang.org/tsconfig
{
    "compilerOptions": {
        "jsx": "react-jsx",
        "noImplicitAny": true,
        "module": "commonjs", //"ES6",
        "target": "ES2022",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,

        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@interfeces": ["./src/interfaces.ts"],
            "@Component/*": ["./src/components/*"],
            "@redux/Slice/*":["src/redux/features/*"]
        }
    },
    "include": ["./src"],
    "exclude": [
        "./node_modules",
        "./node_modules/**/*.js",
        "*.config.js",
        "**/dist",
        "dist",
        "*eslintrc.*",
        "*/**/*.json",
    ]
}
